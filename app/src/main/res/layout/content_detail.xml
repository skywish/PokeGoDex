<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailActivity"
    tools:showIn="@layout/activity_detail"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/pokemon_evolve_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max CP"
            android:textColor="@color/evolve_attr"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/evolve_attr"
            android:text="Type1 rank" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/evolve_attr"
            android:text="Type2 rank" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/evolve_attr"
            android:text="CP rank" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_evolve1"
                android:layout_width="@dimen/pokemon_evolve_size"
                android:layout_height="@dimen/pokemon_evolve_size"
                android:src="@drawable/id_1" />

            <TextView
                android:id="@+id/tv_evolve1_maxcp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120" />

            <TextView
                android:id="@+id/tv_evolve1_type1_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120/350" />

            <TextView
                android:id="@+id/tv_evolve1_type2_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120/350" />

            <TextView
                android:id="@+id/tv_evolve1_cp_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120/350" />
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_arrow1"
            android:layout_width="@dimen/evolve_arrow"
            android:layout_height="@dimen/evolve_arrow"
            android:src="@drawable/ic_arrow_right_alt" />

        <LinearLayout
            android:id="@+id/ly_evolve2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_evolve2"
                android:layout_width="@dimen/pokemon_evolve_size"
                android:layout_height="@dimen/pokemon_evolve_size"
                android:src="@drawable/id_1" />

            <TextView
                android:id="@+id/tv_evolve2_maxcp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120" />

            <TextView
                android:id="@+id/tv_evolve2_type1_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120/350" />

            <TextView
                android:id="@+id/tv_evolve2_type2_rank"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120/350" />

            <TextView
                android:id="@+id/tv_evolve2_cp_rank"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120/350" />
        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_arrow2"
            android:layout_width="@dimen/evolve_arrow"
            android:layout_height="@dimen/evolve_arrow"
            android:src="@drawable/ic_arrow_right_alt" />

        <LinearLayout
            android:id="@+id/ly_evolve3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_evolve3"
                android:layout_width="@dimen/pokemon_evolve_size"
                android:layout_height="@dimen/pokemon_evolve_size"
                android:src="@drawable/id_1" />

            <TextView
                android:id="@+id/tv_evolve3_maxcp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120" />

            <TextView
                android:id="@+id/tv_evolve3_type1_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120/350" />

            <TextView
                android:id="@+id/tv_evolve3_type2_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120/350" />

            <TextView
                android:id="@+id/tv_evolve3_cp_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/evolve_attr"
                android:text="120/350" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>